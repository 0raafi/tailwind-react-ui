{
  "compilerOptions": {
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "reactNamespace": "React",
    "esModuleInterop": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "declaration": true,
    "rootDir": "src",
    "outDir": "lib",
    "strict": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots" : ["node_modules/@types", "src/types"],
    "moduleResolution": "node",
    "baseUrl": "/"
  },
  "include": ["src", "stories"],
  "exclude": [".storybook", "src/__tests__/*", "src/**/__tests__/*" , "tools", "utils"]
}